pipeline {
    agent any

    environment {
        PROJECT_ROOT = "${WORKSPACE}" // Jenkins workspace
    }

    stages {

        stage('Check Docker') {
            steps {
                echo "Checking Docker and Docker Compose versions..."
                bat 'docker --version'
                bat 'docker compose version'
            }
        }

        stage('Clean Previous Containers') {
            steps {
                dir("${PROJECT_ROOT}") { // workspace root, docker-compose.yml is here
                    echo "Stopping and removing any existing containers..."
                    bat 'docker compose down || echo "No existing containers"'
                }
            }
        }

        stage('Build & Deploy Containers') {
            steps {
                dir("${PROJECT_ROOT}") { // workspace root
                    echo "Building and deploying backend and frontend containers..."
                    bat 'docker compose up -d --build'
                }
            }
        }

        stage('Verify Deployment') {
            steps {
                echo "Listing running containers..."
                bat 'docker ps'
            }
        }
    }

    post {
        success {
            echo "Deployment successful! ðŸŽ‰"
        }
        failure {
            echo "Deployment failed. Check logs. âš¡"
        }
    }
}
